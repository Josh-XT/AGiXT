{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/servers/main/schemas/server-manifest.schema.json",
  "name": "agixt-mcp-server",
  "version": "1.0.0",
  "description": "Claude Code MCP Server Extension for AGiXT - Enables AI-powered automation through AGiXT agents, chains, memories, and commands",
  "author": "AGiXT Team",
  "license": "MIT",
  "homepage": "https://github.com/Josh-XT/AGiXT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Josh-XT/AGiXT.git"
  },
  "keywords": [
    "agixt",
    "mcp",
    "claude",
    "ai",
    "automation",
    "agents",
    "llm"
  ],
  "categories": [
    "AI",
    "Automation",
    "Development"
  ],
  "runtime": "python",
  "entrypoint": "agixt-mcp-server",
  "configuration": {
    "type": "object",
    "properties": {
      "AGIXT_API_URL": {
        "type": "string",
        "description": "AGiXT API base URL",
        "default": "http://localhost:7437"
      },
      "AGIXT_API_KEY": {
        "type": "string",
        "description": "AGiXT API authentication key",
        "default": ""
      },
      "AGIXT_AGENT_NAME": {
        "type": "string",
        "description": "Default AGiXT agent name to use",
        "default": "gpt4"
      }
    }
  },
  "tools": [
    {
      "name": "agixt_list_agents",
      "description": "List all available AGiXT agents"
    },
    {
      "name": "agixt_get_agent_settings",
      "description": "Get settings for a specific agent"
    },
    {
      "name": "agixt_create_agent",
      "description": "Create a new AGiXT agent"
    },
    {
      "name": "agixt_delete_agent",
      "description": "Delete an existing agent"
    },
    {
      "name": "agixt_get_agent_commands",
      "description": "List available commands for an agent"
    },
    {
      "name": "agixt_chat",
      "description": "Send a message to an AGiXT agent and get a response"
    },
    {
      "name": "agixt_inference",
      "description": "Run inference with advanced options"
    },
    {
      "name": "agixt_list_chains",
      "description": "List all available chains"
    },
    {
      "name": "agixt_get_chain",
      "description": "Get details of a specific chain"
    },
    {
      "name": "agixt_run_chain",
      "description": "Execute a chain with arguments"
    },
    {
      "name": "agixt_create_chain",
      "description": "Create a new chain"
    },
    {
      "name": "agixt_query_memories",
      "description": "Query agent memories with semantic search"
    },
    {
      "name": "agixt_add_memory",
      "description": "Add a new memory to an agent's knowledge base"
    },
    {
      "name": "agixt_learn_url",
      "description": "Have the agent learn from a URL"
    },
    {
      "name": "agixt_learn_file",
      "description": "Have the agent learn from file content"
    },
    {
      "name": "agixt_list_conversations",
      "description": "List all conversations"
    },
    {
      "name": "agixt_get_conversation",
      "description": "Get conversation history"
    },
    {
      "name": "agixt_create_conversation",
      "description": "Create a new conversation"
    },
    {
      "name": "agixt_delete_conversation",
      "description": "Delete a conversation"
    },
    {
      "name": "agixt_execute_command",
      "description": "Execute a specific agent command"
    },
    {
      "name": "agixt_list_prompts",
      "description": "List available prompt templates"
    },
    {
      "name": "agixt_get_prompt",
      "description": "Get a specific prompt template"
    },
    {
      "name": "agixt_list_providers",
      "description": "List available AI providers"
    }
  ]
}
